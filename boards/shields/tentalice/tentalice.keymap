        };
        rmo_violet: rgb_mo_violet {
            compatible = "zmk,behavior-macro-one-param";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <1>;
            bindings
              = <&macro_param_1to1>
              , <&macro_press &mo MACRO_PLACEHOLDER>
              , <&macro_tap &rgb_ug RGB_ON>
              , <&macro_tap &rgb_ug RGB_COLOR_HSB(270,100,100)>
