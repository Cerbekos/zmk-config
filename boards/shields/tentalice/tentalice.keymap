  keymap {
    compatible = "zmk,keymap";

    layer_0 {
      bindings = <
        &kp ESC                       &kp Q         &kp W         &kp E         &kp R         &kp T                 &kp Y         &kp U         &kp I         &kp O         &kp P         &kp BSPC
        &rmt_cyan LCTL TAB            &kp A         &kp S         &kp D         &kp F         &kp G                 &kp H         &kp J         &kp K         &kp L         &td_CME       &rmt_cyan RCTRL RET
        &rmt_orange LSHFT JP_HANZEN   &kp Z         &kp X         &kp C         &kp V         &kp B                 &kp B         &kp N         &kp M         &td_CS        &td_DC        &rmt_orange RSHFT SLASH
        &rlt_yellow 3 JP_LBRACKET                   &rmt_magenta LALT CAPS      &rlt_red 1 SPACE                                  &rlt_green 2 RET       &rmt_lime RGUI DEL               &rlt_blue 4 JP_RBRACKET
      >;
		};

    layer_1 {
      bindings = <
        &trans          &kp JP_PLUS   &kp MINUS     &kp JP_ASTER  &kp SLASH     &kp JP_UNDER          &kp JP_EQUAL  &kp JP_COLON  &kp DOT       &kp JP_YEN    &kp JP_TILDE  &trans
        &trans          &kp N1        &kp N2        &kp N3        &kp N4        &kp N5                &kp N6        &kp N7        &kp N8        &kp N9        &kp N0        &trans
        &trans          &kp N6        &kp N7        &kp N8        &kp N9        &kp N0                &kp N1        &kp N2        &kp N3        &kp N4        &kp N5        &trans
        &rlt_violet 5 SPACE                         &trans        &trans                                            &trans        &trans                                    &trans
      >;
    };

    layer_2 {
      bindings = <
        &trans          &kp LA(TAB)     &kp LG(TAB)   &kp LG(V)     &kp LG(Z)     &kp LG(X)           &trans        &kp PG_UP     &kp UP        &kp PG_DN     &trans        &kp DEL
        &trans          &kp F1          &kp F2        &kp F3        &kp F4        &kp F5              &kp HOME      &kp LEFT      &kp DOWN      &kp RIGHT     &kp BSPC      &trans
        &trans          &kp F6          &kp F7        &kp F8        &kp F9        &kp F10             &trans        &kp END       &kp LA(UP)    &trans        &trans        &trans
        &trans                                        &trans        &trans                                          &trans        &trans                                    &rlt_violet 5 SPACE
      >;
    };

    layer_3 {
      bindings = <
        &trans          &kp EXCL    &kp JP_DQUOTE     &kp HASH      &kp DLLR      &kp PRCNT           &kp JP_AMP    &kp JP_QUOTE  &kp JP_LPAREN     &kp JP_RPAREN   &kp JP_CARET  &trans
        &trans          &trans          &trans        &trans        &trans        &trans              &kp JP_AT     &kp JP_BAQT   &kp JP_LBRACKET   &kp JP_LBRACE   &trans        &trans
        &trans          &trans          &trans        &trans        &trans        &trans              &kp JP_PLUS   &kp JP_ASTER  &kp JP_RBRACKET   &kp JP_RBRACE   &kp JP_UNDER  &trans
        &trans                                        &trans        &rlt_violet 5 SPACE                             &trans        &trans                                          &trans
      >;
    };

    layer_4 {
      bindings = <
        &trans          &trans          &trans        &trans        &trans        &trans              &trans        &msc SCRL_UP    &mmv MOVE_UP    &msc SCRL_DOWN  &trans        &trans
        &trans          &rgb_ug RGB_HUD &rgb_ug RGB_HUI &rgb_ug RGB_EFR &rgb_ug RGB_EFF &trans        &trans        &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT &trans        &trans
        &trans          &rgb_ug RGB_SAI &rgb_ug RGB_SAD &rgb_ug RGB_BRI &rgb_ug RGB_BRD &trans        &mkp LCLK     &mkp RCLK       &mkp MCLK       &trans          &trans        &trans
        &trans                                        &trans        &rgb_ug RGB_TOG                                 &rlt_violet 5 SPACE    &trans                                 &trans
      >;
    };

    layer_5 {
      bindings = <
        &trans          &bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4        &bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &trans
        &trans          &trans          &trans        &trans        &bt BT_CLR    &bt BT_CLR_ALL      &bt BT_CLR_ALL  &bt BT_CLR    &trans        &trans        &trans        &trans
        &trans          &trans          &trans        &trans        &trans        &trans              &trans          &trans        &trans        &trans        &trans        &trans
        &trans                                        &bootloader   &trans                                            &trans        &bootloader                               &trans
      >;
    };
  };
};

#include <input/processors.dtsi>

&mkp_input_listener {
    input-processors = <&zip_temp_layer 4 250>;
};
