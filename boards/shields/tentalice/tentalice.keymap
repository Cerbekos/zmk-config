            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <180>;
            bindings = <&rkp_lime>, <&kp>;
            quick-tap-ms = <150>;
        };
        rkp_lime: rgb_kp_lime {
            compatible = "zmk,behavior-macro-one-param";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <1>;
            bindings
              = <&macro_param_1to1>
              , <&macro_press &kp MACRO_PLACEHOLDER>
              , <&macro_tap &rgb_ug RGB_ON>
