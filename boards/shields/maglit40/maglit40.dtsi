  kscan0: kscan {
    compatible = "zmk,kscan-gpio-matrix";
    diode-direction = "col2row";
    wakeup-source;
  };

  vbatt: vbatt {
    compatible = "zmk,battery-voltage-divider";
    io-channels = <&adc 7>;
    output-ohms = <510000>;
    full-ohms = <(510000 + 1000000)>;
    power-gpios = <&gpio0 14 (GPIO_OPEN_DRAIN | GPIO_ACTIVE_LOW)>;
  };
